---
import Content from '@/components/Content.astro'
import PageCard from '../components/PageCard.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
  </head><a rel="icon" type="image/svg+xml" href="/favicon.svg"></a>
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>

  <body>
    <div class="container">
      <PageCard />
      <Content>
        <slot />
      </Content>
    </div>
  </body>

  <style lang="scss" is:global>
    @import '@/styles/media';

    body {
      padding: 0;
      margin: 0;
      font-family:
        -apple-system,
        BlinkMacSystemFont,
        Segoe UI,
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        Fira Sans,
        Droid Sans,
        Helvetica Neue,
        sans-serif;
    }

    * {
      margin: 0;
      padding: 0;
      font-family: 'Open Sans', sans-serif;
      font-size: 10px;
      // color: ${props => props.theme.text};
      color: black;
      box-sizing: border-box;
      outline: none;
    }

    h1,
    h2,
    h3 {
      font-family: 'Montserrat', sans-serif;
    }

    a {
      // color: ${props => props.theme.text};
      color: blue;
      text-decoration: none;
    }

    .container {
      display: flex;
      position: relative;
      flex-wrap: wrap;
      margin: 0 auto;
      padding: 40px 10px;
      width: 1100px;
      max-width: 100%;
      gap: 30px;
      @media (max-width: $lg) {
        padding: 20px 10px;
        gap: 15px;
      }
      @media (max-width: $spec) {
        padding: 10px 10px 40px;
      }
    }
  </style>


</html>
